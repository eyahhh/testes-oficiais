local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Orion/main/source.lua'))()
local Window = OrionLib:MakeWindow({Name = "Lightz Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "SaveLight"})

local function LoadScript(url, scriptName)
    local success, script = pcall(game.HttpGet, game, url)
    if success then
        local success, err = pcall(loadstring(script))
        if not success then
            warn("Failed to execute script '".. scriptName .."':", err)
        else
            print("Script '".. scriptName .."' executed successfully.")
        end
    else
        warn("Failed to load script '".. scriptName .."':", script)
    end
end

local ParryTab = Window:MakeTab({Name = "Parry Ball", Icon = "rbxassetid://4483345998", PremiumOnly = false})
wait(1.9)

OrionLib:MakeNotification({
    Name = "Script executado!",
    Content = "VocÃª pode continuar usando o Light HUB!",
    Image = "rbxassetid://4483345998",
    Time = 10
})

